<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
	<Appenders>
		<Async name="ASYNC">
			<AppenderRef ref="FILE" />
			<AppenderRef ref="CONSOLE" />
		</Async>
		<Async name="TRACE">
			<AppenderRef ref="TRACE_FILE" />
		</Async>
		
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n" />
		</Console>

		<RollingFile name="FILE" fileName="/opt/logs/hermes-collector/hermes-collector.log"
			filePattern="/opt/logs/hermes-collector/$${date:yyyy-MM}/hermes-collector.%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n" />
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20">
				<Delete basePath="/opt/logs/hermes-collector/" maxDepth="2">
					<IfFileName glob="*/hermes-collector*.log.gz" />
					<IfLastModified age="7d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
		
		<RollingFile name="TRACE_FILE" fileName="/opt/logs/hermes-collector/hermes-collector-trace.log"
			filePattern="/opt/logs/hermes-collector/$${date:yyyy-MM}/hermes-collector-trace.%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n" />
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20">
				<Delete basePath="/opt/logs/hermes-collector/" maxDepth="2">
					<IfFileName glob="*/hermes-collector-trace*.log.gz" />
					<IfLastModified age="7d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="info">
			<Appender-ref ref="ASYNC" />
		</Root>
		<Logger name="collector-tracer" level="info" additivity="false">
			<Appender-ref ref="TRACE" />
		</Logger>
	</Loggers>

</Configuration>  