<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>broker</id>
	<formats>
		<format>tar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!--scripts -->
		<fileSet>
			<directory>${project.basedir}/script/app</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/script/env/broker/${package.environment}</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>env.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<!--artifact.war -->
		<fileSet>
			<directory>${project.basedir}/../hermes-broker/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>hermes-broker-*.war</include>
			</includes>
			<fileMode>0444</fileMode>
		</fileSet>
		<!--jetty runner-->
		<fileSet>
			<directory>${project.basedir}/target/jetty</directory>
			<outputDirectory>/jetty</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<fileMode>0444</fileMode>
		</fileSet>
	</fileSets>
</assembly>